<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#08b1e5"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textSize="@dimen/question_body" />

        <LinearLayout
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionsHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_1"
                android:textSize="@dimen/question_header" />

            <TextView
                style="@style/QuestionsBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_1_text" />

            <EditText
                android:id="@+id/ques1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ques_hint"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionsHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_2"
                android:textSize="@dimen/question_header" />

            <TextView
                style="@style/QuestionsBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_2_text" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin"
                android:src="@drawable/logo1" />

            <RadioGroup
                android:id="@+id/ques2_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/ques2_but1">

                <RadioButton
                    android:id="@+id/ques2_but1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:text="@string/ques_2_but1" />

                <RadioButton
                    android:id="@+id/ques2_but2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:text="@string/ques_2_but2" />

                <RadioButton
                    android:id="@+id/ques2_but3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:text="@string/ques_2_but3" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionsHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_3"
                android:textSize="@dimen/question_header" />

            <TextView
                style="@style/QuestionsBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_3_text" />

            <CheckBox
                android:id="@+id/ques3_box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_3_but1" />

            <CheckBox
                android:id="@+id/ques3_box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_3_but2" />

            <CheckBox
                android:id="@+id/ques3_box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_3_but3" />

            <CheckBox
                android:id="@+id/ques3_box4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_3_but4" />

        </LinearLayout>

        <LinearLayout
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionsHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_4" />

            <TextView
                style="@style/QuestionsBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_4_text" />

            <EditText
                android:id="@+id/ques4_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ques_hint"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionsHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_5" />

            <TextView
                style="@style/QuestionsBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_5_text" />

            <RadioGroup
                android:id="@+id/ques5_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkedButton="@id/ques5_but1">

                <RadioButton
                    android:id="@+id/ques5_but1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:text="@string/ques_5_but1" />

                <RadioButton
                    android:id="@+id/ques5_but2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:text="@string/ques_5_but2" />

                <RadioButton
                    android:id="@+id/ques5_but3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:text="@string/ques_5_but3" />

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            style="@style/QuestionsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/QuestionsHeaderStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_6" />

            <TextView
                style="@style/QuestionsBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_6_text" />

            <CheckBox
                android:id="@+id/ques6_box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_6_but1" />

            <CheckBox
                android:id="@+id/ques6_box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_6_but2" />

            <CheckBox
                android:id="@+id/ques6_box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_6_but3" />

            <CheckBox
                android:id="@+id/ques6_box4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/ques_6_but4" />

        </LinearLayout>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/submitButton"/>

    </LinearLayout>

</ScrollView>
